{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["library", "items"],
  "properties": {
    "library": {
      "type": "object",
      "required": ["name", "version", "generatedAt"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "generatedAt": { "type": "string", "format": "date-time" },
        "defaults": {
          "type": "object",
          "properties": {
            "forms": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "alphaAcidPercent"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^hop_[a-z0-9_]+$",
            "minLength": 1
          },
          "name": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": ["aroma", "bittering", "dual"]
          },
          "producer": { "type": "string" },
          "country": {
            "type": "string",
            "pattern": "^[A-Z]{2}$"
          },
          "supplier": { "type": "string" },
          "alphaAcidPercent": {
            "type": "object",
            "required": ["min", "max"],
            "properties": {
              "min": { "type": "number", "minimum": 0, "maximum": 100 },
              "max": { "type": "number", "minimum": 0, "maximum": 100 },
              "typical": { "type": "number", "minimum": 0, "maximum": 100 }
            },
            "additionalProperties": false
          },
          "betaAcidPercent": {
            "type": "object",
            "properties": {
              "min": { "type": "number", "minimum": 0, "maximum": 100 },
              "max": { "type": "number", "minimum": 0, "maximum": 100 },
              "typical": { "type": "number", "minimum": 0, "maximum": 100 }
            },
            "additionalProperties": false
          },
          "cohumulonePercent": {
            "type": "object",
            "properties": {
              "min": { "type": "number", "minimum": 0, "maximum": 100 },
              "max": { "type": "number", "minimum": 0, "maximum": 100 },
              "typical": { "type": "number", "minimum": 0, "maximum": 100 }
            },
            "additionalProperties": false
          },
          "oilProfile": {
            "type": "object",
            "properties": {
              "totalOils": {
                "type": "object",
                "properties": {
                  "min": { "type": "number", "minimum": 0 },
                  "max": { "type": "number", "minimum": 0 },
                  "typical": { "type": "number", "minimum": 0 }
                },
                "additionalProperties": false
              },
              "myrcene": {
                "type": "object",
                "properties": {
                  "min": { "type": "number", "minimum": 0, "maximum": 100 },
                  "max": { "type": "number", "minimum": 0, "maximum": 100 },
                  "typical": { "type": "number", "minimum": 0, "maximum": 100 }
                },
                "additionalProperties": false
              },
              "humulene": {
                "type": "object",
                "properties": {
                  "min": { "type": "number", "minimum": 0, "maximum": 100 },
                  "max": { "type": "number", "minimum": 0, "maximum": 100 },
                  "typical": { "type": "number", "minimum": 0, "maximum": 100 }
                },
                "additionalProperties": false
              },
              "caryophyllene": {
                "type": "object",
                "properties": {
                  "min": { "type": "number", "minimum": 0, "maximum": 100 },
                  "max": { "type": "number", "minimum": 0, "maximum": 100 },
                  "typical": { "type": "number", "minimum": 0, "maximum": 100 }
                },
                "additionalProperties": false
              },
              "farnesene": {
                "type": "object",
                "properties": {
                  "min": { "type": "number", "minimum": 0, "maximum": 100 },
                  "max": { "type": "number", "minimum": 0, "maximum": 100 },
                  "typical": { "type": "number", "minimum": 0, "maximum": 100 }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "storageIndex": { "type": "number", "minimum": 0, "maximum": 1 },
          "aromaNotes": {
            "type": "array",
            "items": { "type": "string" }
          },
          "forms": {
            "type": "array",
            "items": { "type": "string" }
          },
          "usage": {
            "type": "object",
            "properties": {
              "bittering": { "type": "boolean" },
              "aroma": { "type": "boolean" },
              "dryHop": { "type": "boolean" },
              "whirlpool": { "type": "boolean" }
            },
            "additionalProperties": false
          },
          "styles": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metadata": {
            "type": "object",
            "required": ["version", "updatedAt"],
            "properties": {
              "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
              "source": { "type": "string" },
              "updatedAt": { "type": "string", "format": "date-time" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}



















