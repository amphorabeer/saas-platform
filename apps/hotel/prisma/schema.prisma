  organizationId  String
  
  firstName       String
  lastName        String
  position        String
  department      String   // housekeeping, reception, management, etc.
  phone           String?
  email           String?
  
  isActive        Boolean  @default(true)
  hireDate        DateTime?
  notes           String?  @db.Text
  staffData       Json?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([organizationId])
  @@index([department])
}

// Hotel Seasons (for pricing)
